{{#if prompt}}
  <option>{{prompt}}</option>
{{/if}}

{{#if optionGroupPath}}
  {{#each groupedContent as |group|}}
    {{view groupView
      content=group.content
      label=group.label
      selection=selection
      multiple=multiple
      optionLabelPath=optionLabelPath
      optionValuePath=optionValuePath
      optionView=optionView}}
  {{/each}}
{{else}}
  {{#each content as |item|}}
    {{view optionView
      content=item
      selection=selection
      parentValue=value
      multiple=multiple
      optionLabelPath=optionLabelPath
      optionValuePath=optionValuePath}}
    {{/each}}
{{/if}}